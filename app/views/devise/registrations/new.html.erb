<div class="container">
    <div class="row">
    <div class="col-lg-2">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

        <div><%= f.label :username %><br />
        <%= f.text_field :username %></div>
    
        <label>Email</label>
        <%= f.email_field :email, class:"form-control", id:"inputEmail" %>
        <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
    
        <label>Password (6 characters minimum)</label>
        <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword"  %>
        <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
  
        <label>Password</label>
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword" %>
         <span class="fa fa-check-circle-o form-control-icon" aria-hidden="true"></span>
    
        <%= f.submit "Sign up", class: "btn btn-xs btn-block btn-base-1 mt-20 sign_up" %>
        <% end %>
        <%= link_to "login", new_user_session_path, class: "sign_in" %>
        </div>

        <div class="col-lg-10">
        <div>
        </div>
        </div>

    </div>
</div>