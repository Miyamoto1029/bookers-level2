<div class="container">
    <div class="row">
    <div class="col-lg-2">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

        <label>name</label>
        <%= f.text_field :username, class: "name" %>
    
        <label>Email</label>
        <%= f.email_field :email, class: "email", id:"inputEmail" %>
       
        <label>Password (6 characters minimum)</label>
        <%= f.password_field :password, autocomplete: "off", class: "password", id:"inputPassword"  %>
        
  
        <label>Password</label>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "password_confirm", id:"inputConfirmPassword" %>
        <br><br>
        <%= f.submit "Sign up", class: "btn btn-success sign_up" %>
        <% end %>
        <%= link_to "login", new_user_session_path, class: "sign_in" %>
        </div>

        <div class="col-lg-10">
        <div>
        </div>
        </div>

    </div>
</div>

<% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
        <ul>
            <% @user.errors.full_messages.each do |message| %>
             <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>