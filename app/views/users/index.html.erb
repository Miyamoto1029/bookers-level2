<div class="container">
	<div class="row">
		<div class="col-lg-3" style="background-color: #cccccc;">

			<%= render 'partial/sidebar', user: @user, book: @book %>
		
		</div>


		<div class="col-lg-9" style="background-color: #999999;">
		<h1>Users</h1>
		<table>
			<tr align="center">
	
				<% @users.reverse_each do |user| %>
		
			<th>
			<%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
			</th>
			<th><%= user.name %></th>
    		<th><%= link_to "Show", user_path(user.id) %> </th>
    		</tr>
  			<% end %>
		</table>
	</div>
</div>
</div>