<p>users/index</p>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'partial/sidebar', user: @user, book: @book %>
		</div>
		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table">
				<tr align="center">
					<th>image</th>
					<th>name</th>
					<th></th>
				</tr>
				<% @users.reverse_each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
					</td>
					<td><%= user.username %></td>
    				<td><%= link_to "Show", user_path(user.id), class: "user_#{user.id}" %> </td>
    				</tr>
  				<% end %>
			</table>
		</div>
	<div class="col-xs-3 col-xs-offset-9">
      <p>CopyRight Infratop.inc</p>
    </div>
	</div>
</div>