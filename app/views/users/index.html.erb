<div class="container">
	<div class="row">
		<div class="col-lg-3" style="background-color: #cccccc;">
			<%= render 'partial/sidebar', user: @user, book: @book %>
		</div>
		<div class="col-lg-9" style="background-color: #999999;">
			<h1>Users</h1>
			<table>
				<% @users.reverse_each do |user| %>
					<tr align="center">
						<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
						</td>
						<td><%= user.name %></td>
    					<td><%= link_to "Show", user_path(user.id) %> </td>
    				</tr>
  				<% end %>
			</table>
		</div>
	</div>
</div>