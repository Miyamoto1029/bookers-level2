<p>user/edit</p>
<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>user info</h2>
       <%= form_for(@user) do |f| %>
            <label>Name</label>
            <%= f.text_field :username, class: "name" %>
            <br>
            <label>Image</label>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-image" %>
            <br>
            <label>Introduction</label>
            <%= f.text_field :introduction, class: "introduction" %>

            <%= f.submit "update user", class: "edit_user#{current_user.id}" %>
            <% end %>
    </div>
    <div class="col-xs-3 col-xs-offset-9">
      <p>CopyRight Infratop.inc</p>
    </div>
  </div>
</div>