user/edit
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>user info</h2>
       <%= form_for(@user) do |f| %>
            <label>Name</label>
            <%= f.text_field :username %>

            <label>Image</label>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

            <label>Introduction</label>
            <%= f.text_field :introduction %>

            <%= f.submit "update user", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
            <% end %>
    </div>
    <div class="col-xs-9">
    </div>
  </div>
</div>