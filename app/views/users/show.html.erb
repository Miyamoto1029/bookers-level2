<h1>show</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-3" style="background-color: #cccccc;">
	<h1>User info</h1>
  		<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
  		<% if @user.id == current_user.id %>
  		<div>name<%= @user.name %></div>
  		<div>introduction</div>
  		<div><%= link_to "プロフィール編集", edit_user_path(@user) %></div>
  		<% end %>
	 <h2>New book</h2>
		<%= form_for(@book) do |f| %>
 		<label>Title</label>
 		<br>
		<%= f.text_field :book_name %>
		<br> 
 		<label>opinion</label>
 		<br>
 		<%= f.text_area :caption %>
		<br>
		<br>
 		<%= f.submit 'Create Book' %>
 		<% end %>
 	</div>

 		<div class="col-lg-9" style="background-color: #999999;">
 			<table>
    <tr align="center">

        <tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></tr>
        <tr><% @books.reverse_each do |book| %><tr>
        <td><%=link_to book.book_name, book_path(book.id) %></td>
        <!--  <td><%= book.book_name %></td> -->
         <td><%= book.caption %></td>
       </tr>
     <% end %>
     </table>
		 </div>
	</div>
</div>