<div class="container">
  <div class="row">
   
    <div class="col-lg-3" style="background-color: #cccccc;">
      <%= render 'partial/sidebar', user: @user, book: @book  %>
    </div>
  
    <div class="col-lg-9" style="background-color: #999999;">
      <table>
        <% @books.reverse_each do |book| %>
          <tr align="center">
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= link_to book.book_name, book_path(book.id) %></td>
            <td><%= book.caption %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>