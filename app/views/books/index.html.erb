books/index
<% if flash[:success] %>
  <p><%= flash[:success] %></p>
<% end %>

<div class="container">
  <div class="row">
   
    <div class="col-lg-3">
      <%= render 'partial/sidebar', user: @user, book: @book  %>
    </div>
  
    <div class="col-lg-9">
      <h2>Books</h2>
      <table class="table">
        <tr align="center">
          <th></th>
          <th>title</th>
          <th>opinion</th>
        </tr>

          <% @books.reverse_each do |book| %>

          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= link_to book.book_name, book_path(book.id) %></td>
            <td><%= book.caption %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
