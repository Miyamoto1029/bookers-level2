<div class="container">
  <div class="row">
   
      <div class="col-lg-3" style="background-color: #cccccc;">
        <%= render 'partial/sidebar', user: @user, book: @book  %>
      </div>
  
  <div class="col-lg-9" style="background-color: #999999;">
    <table>
    <tr align="center">
        </tr>
        <% @books.reverse_each do |book| %>
        <tr>
         <td><%= book.book_name %></td>
         <td><%= book.caption %></td>
        <td><%= link_to "Show", book_path(book.id), class: "show_#{book.id}"%></td>
       </tr>
     <% end %>
     </table>
    </div>
  </div>
</div>