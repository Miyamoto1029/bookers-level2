<div>
  <h1>User info</h1>
  <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
  <div>name<%= user.username %></div>
  <div>introduction<%= user.introduction %></div>

  	<%= link_to  edit_user_path(user), class: 'edit_user_#{current_user.id}' do %>
        <i class="btn btn-default glyphicon glyphicon-wrench"></i>
        <% end %>

 <h2>New book</h2>
<%= form_for(book) do |f| %>
 <label>Title</label>
 <br>
 <%= f.text_field :book_name %>
<br> 
 <label>opinion</label>
 <br>
 <%= f.text_area :caption %>
<br>
<br>
 <%= f.submit 'Create Book' %>

<% end %>
</div>
